<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PinkRoundButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textSize">28sp</item>
        <item name="backgroundTint">@drawable/pink_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="WhiteFont">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="WhiteFont.Regular48">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="WhiteFont.Regular24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WhiteFont.Bold28">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>